@model DesafioAPIFeitoComMVCSolo.Models.Tarefa
@{
    ViewData["Title"] ="Lista de Tarefas Por Data";
}

<h2>Buscar Tarefa por Data</h2>

<form asp-action="GetByDate" method="get">
    <div class="form-group">
        <label asp-for="Data" class="control-label">Nome:</label>
        <input asp-for="Data" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (Model != null)
{
    <h3>Detalhes da Tarefa</h3>
    <p>ID: @Model.Id</p>
    <p>Descrição: @Model.Descricao</p>
    <p>Descrição: @Model.Titulo</p>
    <p>Descrição: @Model.Data</p>
    <p>Descrição: @Model.Status</p>

}
<a asp-action="Index">Voltar</a>